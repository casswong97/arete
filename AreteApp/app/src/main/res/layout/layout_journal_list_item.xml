<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tV_Goal_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="Perpetua Titling MT"
        tools:text="Goal Name" />

    <EditText
        android:id="@+id/eT_Goal_Reflection"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tV_Goal_Name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Reflection To Be Completed"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:fontFamily="Perpetua Titling MT" />

    <CheckBox
        android:id="@+id/checkbox_Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tV_Goal_Name"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="-4dp"
        android:layout_toEndOf="@+id/tV_Goal_Name"
        app:fontFamily="Perpetua Titling MT"
        tools:text="Completion" />
</RelativeLayout>