<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mountainsBackground"
            android:layout_width="match_parent"
            android:layout_height="389dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/mountains" />

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="233dp"
            android:text="I would feel great about today if..."
            android:textSize="21sp"
            app:fontFamily="Perpetua Titling MT" />

        <EditText
            android:id="@+id/editTextAnswer"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="279dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:ems="10"
            android:hint=" ..."
            android:inputType="textMultiLine"
            app:fontFamily="Perpetua Titling MT" />

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/editTextAnswer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:background="@drawable/baseline_border_color_black_24"
            android:src="@drawable/baseline_border_color_black_24" />

        <TextView
            android:id="@+id/viewGreeting"
            android:layout_width="267dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/morning_icon"
            android:layout_width="78dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="173dp"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/morning_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/afternoon_icon"
            android:layout_width="78dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="173dp"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/afternoon_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/evening_icon"
            android:layout_width="78dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="173dp"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/evening_icon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/night_icon"
            android:layout_width="78dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="173dp"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/night_icon"
            android:visibility="invisible" />

    </RelativeLayout>


</FrameLayout>