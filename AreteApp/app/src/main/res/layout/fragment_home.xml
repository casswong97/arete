<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="62dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="121dp"
            android:text="I would feel great about today if..."
            android:textSize="18sp"
            app:fontFamily="Perpetua Titling MT" />

        <EditText
            android:id="@+id/editTextAnswer"
            android:layout_width="203dp"
            android:layout_height="27dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="173dp"
            android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            android:ems="10"
            android:hint="..."
            android:inputType="text|textLongMessage"
            app:fontFamily="Perpetua Titling MT" />

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/editTextAnswer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:background="@drawable/baseline_border_color_black_24"
            android:src="@drawable/baseline_border_color_black_24" />

        <EditText
            android:id="@+id/editGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp"
            android:ems="10"
            android:inputType="text"
            android:singleLine="true" />
    </RelativeLayout>


</FrameLayout>